query Vulnerabilities {
  securityVulnerabilities(
    package: "%s"
    first: 100
    orderBy: {field: UPDATED_AT, direction: ASC}
  ) {
    nodes {
      package {
        name
        ecosystem
      }
      vulnerableVersionRange
      advisory {
        severity
        ghsaId
        cvss {
          score
        }
        identifiers {
          value
        }
        publishedAt
        origin
      }
      firstPatchedVersion {
        identifier
      }
    }
    totalCount
  }
}